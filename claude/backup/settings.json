    "defaultMode": "plan"
  },
  "model": "opus",
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "You are a security reviewer evaluating a permission request from Claude Code. Analyze this request: $ARGUMENTS\n\nEvaluate if this action is safe to auto-approve. Consider:\n- Is it a common, safe development operation?\n- Does it avoid destructive actions (rm -rf, force push, dropping databases)?\n- Does it avoid accessing sensitive files (.env, credentials, private keys)?\n- Is the scope reasonable and not overly broad?\n\nBe pragmatic: most dev operations (running tests, building, git operations, file edits) are safe.\n\nRespond with JSON only:\n- {\"ok\": true} to auto-approve\n- {\"ok\": false, \"reason\": \"brief explanation\"} to deny and require manual approval",
            "timeout": 30,
            "model": "opus"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/lint-check.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/shreyasgupta/Documents/dotfiles/claude/backup.sh",
            "timeout": 60
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "supabase@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "vercel@claude-plugins-official": true,
    "figma@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "compound-engineering@every-marketplace": true,
    "coding-tutor@every-marketplace": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "playground@claude-plugins-official": true
  }
}
